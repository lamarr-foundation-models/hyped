{
    "name": "imdb-bert",

    "model": {
        "pretrained_ckpt": "bert-base-uncased",

        "heads": {
            "cls": {
                "head_type": "hyped-cls-head",
                "label_column": "labels"
            }
        }
    },
    
    "trainer": {
        "learning_rate": 2e-5,
        "weight_decay": 0.01,
        "max_grad_norm": 1.0,

        "per_device_train_batch_size": 32,
        "per_device_eval_batch_size": 64,

        "max_steps": 1000,
        
        "evaluation_strategy": "steps",
        "eval_steps": 100,
        
        "save_total_limit": 1,
        "save_strategy": "steps",
        "save_steps": 100,

        "metric_for_best_model": "eval_cls_f1",
        "greater_is_better": true,
        "early_stopping_patience": 5,
        "load_best_model_at_end": true
    },

    "metrics": {
        "cls": [
            {
                "metric_type": "cls",
                "average": "micro",
                "prefix": "micro"
            },
            {
                "metric_type": "cls",
                "average": "macro",
                "prefix": "macro"
            }
        ]
    }
}
