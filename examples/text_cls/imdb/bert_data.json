{
    "dataset": "imdb",
    "splits": {
        "train": "train[:80%]",
        "validation": "train[80%:]",
        "test": "test"
    },

    "pipeline": [
        {
            "processor_type": "tokenizer",
            "pretrained_ckpt": "bert-base-uncased",
            "text_column": "text",
            "max_length": 128,
            "truncation": true,
            "padding": "max_length"
        }
    ],

    "filters": [
        {
            "filter_type": "min-seq-len-filter",
            "pretrained_ckpt": "bert-base-uncased",
            "min_length": 8
        }
    ],

    "columns": {
        "input_ids": "input_ids",
        "attention_mask": "attention_mask",
        "labels": "label"
    }
}
